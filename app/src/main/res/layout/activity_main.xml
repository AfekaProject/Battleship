<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context="afeka.battleship.MainActivity">

    <ImageView
        android:id="@+id/easy_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/medium_button"
        android:layout_alignStart="@+id/medium_button"
        android:onClick="clickStart"
        app:srcCompat="@drawable/easy" />

    <ImageView
        android:id="@+id/medium_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="clickStart"
        app:srcCompat="@drawable/medium" />

    <ImageView
        android:id="@+id/hard_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/medium_button"
        android:layout_alignStart="@+id/medium_button"
        android:onClick="clickStart"
        app:srcCompat="@drawable/hard" />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="15dp"
        android:onClick="clickPlay"
        app:srcCompat="@drawable/start" />

</RelativeLayout>
